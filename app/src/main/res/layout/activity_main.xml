    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/init_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连接到物联网平台"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/device_state_btn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设备状态查看"
                android:gravity="center"/>
            <TextView
                android:id="@+id/state_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/check_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看数据"/>
        <Button
            android:id="@+id/stop_fan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止吹风"/>
        <Button
            android:id="@+id/stop_motor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止震动"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/wifi_control"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="WiFi控制"/>
            <Button
                android:id="@+id/ble_control"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="蓝牙控制"/>
        </LinearLayout>
        <TextView
            android:id="@+id/msgTextView"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
